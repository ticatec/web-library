{
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "ESNext",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"declaration": true,
		"sourceMap": false,
		"rootDir": "src",
		"outDir": "dist"
	},
	"exclude": [
		"node_modules",
		"test"
	],
	"lib": ["es2017"]
}
